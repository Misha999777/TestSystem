<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>tk.tcomad</groupId>
    <artifactId>testsystem-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.3</version>
    </parent>

    <modules>
        <module>testsystem-ui</module>
        <module>testsystem-service</module>
    </modules>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <ui.build.configuration>development</ui.build.configuration>

        <spring-boot-maven-plugin.version>2.3.1.RELEASE</spring-boot-maven-plugin.version>
        <exec-maven-plugin.version>3.0.0</exec-maven-plugin.version>

        <lombok.version>1.18.24</lombok.version>
        <keycloak.version>19.0.1</keycloak.version>
        <postgresql.version>42.5.0</postgresql.version>
        <hibernate-types.version>2.18.0</hibernate-types.version>
        <mapstruct.version>1.5.2.Final</mapstruct.version>
        <spring-security-oauth2-client.version>5.5.2</spring-security-oauth2-client.version>
        <spring-cloud-starter-openfeign.version>3.1.3</spring-cloud-starter-openfeign.version>
    </properties>

    <profiles>
        <profile>
            <id>prod</id>
            <activation>
                <property>
                    <name>prod</name>
                </property>
            </activation>
            <properties>
                <ui.build.configuration>production</ui.build.configuration>
            </properties>
        </profile>
    </profiles>
</project>