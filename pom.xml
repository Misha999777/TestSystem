<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.5.4</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>tk.tcomad</groupId>
    <artifactId>testsystem-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Test System Parent</name>

    <modules>
        <module>testsystem-ui</module>
        <module>testsystem-service</module>
    </modules>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <spring-boot-maven-plugin.version>2.3.1.RELEASE</spring-boot-maven-plugin.version>
        <exec-maven-plugin.version>3.0.0</exec-maven-plugin.version>

        <lombok.version>1.18.20</lombok.version>
        <keycloak.version>15.0.2</keycloak.version>
        <postgresql.version>42.2.23</postgresql.version>
        <hibernate-types.version>2.12.1</hibernate-types.version>
        <mapstruct.version>1.4.2.Final</mapstruct.version>
        <spring-security-oauth2-client.version>5.5.2</spring-security-oauth2-client.version>
        <spring-cloud-starter-openfeign.version>3.0.3</spring-cloud-starter-openfeign.version>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                    <exec-maven-plugin.argument>build</exec-maven-plugin.argument>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <activation>
                <property>
                    <name>prod</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <exec-maven-plugin.argument>build</exec-maven-plugin.argument>
            </properties>
        </profile>
    </profiles>
</project>